          <div class="row-fluid">
              <h1>New User</h1>
              <hr/>
              <form action='/adminuser/create' method='post' onsubmit='return verify()'>
                <label>账号</label>
                <input type='text' name='username' id='username'/>
                <label>email</label>
                <input type='text' name='email' id='email'/>
                <label>手机</label>
                <input type='text' name='mobile' id='mobile'/>
                <label>真名</label>
                <input type='text' name='real_name' />
