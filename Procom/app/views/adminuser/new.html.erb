          </div>
        </div>

<script>
function verify(){
  result = true;

  //
  if($('#username').val()==''){
    alert('username blank');
    result = false;
  };


  //email
  var email = $('#email').val();
  var emailPat=/^(.+)@(.+).(.+)$/;
  var matchArray=email.match(emailPat);
  if (matchArray==null) {
    alert("电子邮件地址必须包括 ( @ 和 . )")
    result = false;
  }

  //mobile
  var ab=/^(13[0-9]|15[0|3|6|7|8|9]|18[8|9])\d{8}$/;
  var phone = $('#mobile').val()
  if(ab.test(phone) == false)
  {
    alert("请正确填写手机号码!");
    result = false;
  }  

  return result;
}
</script>